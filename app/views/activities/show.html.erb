<p id="notice"><%= notice %></p>

<div class="container">
	<div class="col-md-6 col-md-offset-3">
		
		<tr>
		  <td>
		  	<strong>Name:</strong>
		  	<p class="description"><%= @activity.name %></p>
		  	</td>
		  <td>
		  <strong>Prediction:</strong>
		  	<div class="star-rating" data-score="<%= @activity.prediction %>"></div>
		  	</td>
		  <td>
		  <strong>Actual:</strong>
		  <div class="star-rating" data-score="<%= @activity.actual %>"></div>
		  </td>
		</tr>
		
		<%= link_to 'Edit', edit_activity_path(@activity), class: 'btn btn-default' %>
		<%= link_to 'Back', activities_path, class: 'btn btn-default' %>
		</div>
</div>

<script>
  $('.star-rating').raty({
   path: '/assets/',
   readOnly: true,
   hints: ['Miserable', 'Unhappy', 'OK', 'Good', 'WAHOO!!'],
   score: function() {
    return $(this).attr('data-score');
   }
 });
</script>